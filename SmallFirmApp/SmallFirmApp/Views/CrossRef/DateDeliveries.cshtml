@using SmallFirmApp.Models.ViewModels
@model DeliveryVM

<h4>Справка доставени консумативи за период:</h4>

<form class="mb-3" method="post">
    <div class="mb-3">

        <label><strong>От дата:</strong></label>
        <input type="date" class="mb-3" asp-for="StartDate" />

        <label><strong>До дата:</strong></label>
        <input class="mb-3" type="date" asp-for="EndDate" />

    </div>
    <button onclick="sendDates()" class="btn btn-primary">Справка</button>
</form>

<div class="table-responsive">
    <table id="table" class="table table-striped table-hover border-0">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Клиент</th>
                <th>Консуматив</th>
                <th>Брой</th>
                <th>Цена</th>
                <th>Общо</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.flag)
            {
                @foreach (var entry in Model.DateDeliver)
                {
                    <tr>
                        <td>@entry.Day.Value.ToShortDateString()</td>
                        <td>@entry.Client.Name</td>
                        <td>@entry.Consumative.Name</td>
                        <td>@entry.ConsCount</td>
                        <td>@entry.Consumative.Price.Value.ToString("0.00")</td>
                        <td>@((entry.ConsCount * entry.Consumative.Price).Value.ToString("0.00"))</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

